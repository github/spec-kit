{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "{{ name }} API Schemas",
  "description": "JSON schemas for {{ name }} API endpoint validation",
  "schemas": {
    "get_response": {
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier"
              },
              "name": {
                "type": "string",
                "description": "Resource name"
              },
              "created_at": {
                "type": "string",
                "format": "date-time",
                "description": "Creation timestamp"
              }
            },
            "required": ["id", "name"]
          }
        },
        "total": {
          "type": "integer",
          "description": "Total number of items"
        }
      },
      "required": ["data"]
    },
    "post_request": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "description": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean",
          "default": true
        }
      },
      "required": ["name"]
    },
    "post_response": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["id", "name", "created_at"]
    },
    "error_response": {
      "type": "object",
      "properties": {
        "error": {
          "type": "object",
          "properties": {
            "code": {
              "type": "string"
            },
            "message": {
              "type": "string"
            },
            "details": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "field": {
                    "type": "string"
                  },
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "required": ["code", "message"]
        }
      },
      "required": ["error"]
    }
  }
}

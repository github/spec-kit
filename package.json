{
  "name": "spec-kit-azure-devops-extension",
  "version": "1.0.0",
  "description": "Azure DevOps extension that embeds Spec Kit workflows for AI-powered specification management",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run clean && npm run compile && npm run webpack && npm run package-extension",
    "clean": "rimraf dist",
    "compile": "tsc -p .",
    "webpack": "webpack --mode production",
    "webpack:dev": "webpack --mode development",
    "watch": "tsc -w",
    "package-extension": "tfx extension create --manifest-globs vss-extension.json",
    "package": "npm run build",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AI-Pundit/spec-kit.git"
  },
  "keywords": [
    "azure-devops",
    "extension",
    "ai",
    "specification",
    "workflow",
    "llm"
  ],
  "author": "AI Pundit",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^30.1.2",
    "rimraf": "^5.0.0",
    "style-loader": "^4.0.0",
    "tfx-cli": "^0.15.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.0.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "azure-devops-extension-api": "^4.232.0",
    "azure-devops-extension-sdk": "^4.0.2",
    "azure-devops-ui": "^2.167.73"
  }
}
